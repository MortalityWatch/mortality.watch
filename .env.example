# Public URL, used for OG Image when running nuxt generate
NUXT_PUBLIC_SITE_URL=

# Incognito mode for development (inverts logo and changes h1 colors)
# Set to 1 to enable, 0 to disable
NUXT_PUBLIC_INCOGNITO_MODE=0

# Use local cache only (no S3 fallback) - for offline development
# Set to 'true' to enable strict local-only mode
# Requires running 'npm run download-data' first
# Set to 'false' to allow S3 fallback when local files are missing
NUXT_PUBLIC_USE_LOCAL_CACHE=false

# Development countries - subset of countries to download and work with
# Comma-separated list of ISO country codes
# Leave empty to use default list (18 countries) or use --all flag
# Example: NUXT_PUBLIC_DEV_COUNTRIES=USA,GBR,DEU
NUXT_PUBLIC_DEV_COUNTRIES=

# Resend API key for sending emails
EMAIL_HOST_PASSWORD=

# Email from address (domain must be verified with Resend)
EMAIL_FROM=Mortality Watch <noreply@mortality.watch>

# Sentry DSN for error tracking
SENTRY_DSN=
