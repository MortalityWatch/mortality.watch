# Public URL, used for OG Image when running nuxt generate
NUXT_PUBLIC_SITE_URL=

# Incognito mode for development (inverts logo and changes h1 colors)
# Set to 1 to enable, 0 to disable
NUXT_PUBLIC_INCOGNITO_MODE=0

# Use local cache only (no S3 fallback) - for offline development
# Set to 'true' to enable strict local-only mode
# Requires running 'npm run download-data' first
# Set to 'false' to allow S3 fallback when local files are missing
NUXT_PUBLIC_USE_LOCAL_CACHE=false

# Development countries - subset of countries to download and work with
# Comma-separated list of ISO country codes
# Leave empty to use default list (18 countries) or use --all flag
# Example: NUXT_PUBLIC_DEV_COUNTRIES=USA,GBR,DEU
NUXT_PUBLIC_DEV_COUNTRIES=

# Resend API key for sending emails
EMAIL_HOST_PASSWORD=

# Email from address (domain must be verified with Resend)
EMAIL_FROM=Mortality Watch <noreply@mortality.watch>

# Support email address for contact form submissions
SUPPORT_EMAIL=support@mortality.watch

# Sentry DSN for error tracking
SENTRY_DSN=

# Stripe API keys
# Get from https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_... and sk_test_...) for development
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Stripe webhook signing secret
# Get from https://dashboard.stripe.com/webhooks
# Use 'stripe listen' CLI for local development
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for subscription plans
# Create these in Stripe Dashboard under Products
# Monthly: $9.99/month, Yearly: $99/year
STRIPE_PRICE_MONTHLY=
STRIPE_PRICE_YEARLY=

# Invite Code System
# Set to 'true' to enable invite code system
INVITE_CODES_ENABLED=true
# Set to 'true' to require invite codes for registration (Phase 2: Private Beta)
# Set to 'false' to make invite codes optional (Phase 3: Public Launch)
INVITE_CODES_REQUIRED=false
